<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @bookn %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table' >
  		    <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
        <% if @book.favorite_by?(current_user) %>
          <td>
           <%= link_to book_favorites_path(@book), method: :delete do %>
          ♥<%= @book.favorites.count %>
          </td>
          <% end %>

        <% else %>
          <td>
           <%= link_to book_favorite_path(@book), method: :post do %>
           ♡︎<%= @book.favorites.count %>
          </td>
          <% end %>

        <% end %>
          <td>コメント数︎:<%= @book.book_comments.count %></td>

          <% if @book.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>
      </table>

　　  <h5 >コメント一覧</h5>
      <table class= 'table' >
      <% @book_comments.each do |book_comment| %>
      <tr>
        <td>
        <%= link_to (book_comment.user) do %>
          <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><br>
          <%= book_comment.user.name %>
        <% end %>
        </td>
      <td>
       <%= book_comment.comment %>
      </td>
      <td>
        <% if book_comment.user_id == current_user.id %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book,book_comment), method: :delete, class: "btn-sm btn-danger" %>
        <% end %>
      </td>
     </tr>
     <% end %>
     </table>

      <div class='container'>
       <div class='row'>
        <%= form_with model:[@book,@book_comment], local: true do |f| %>
			  <%= f.text_area :comment,size: "90x6", id: "book_comment" %>
			  <br>
			  <%= f.submit '送信' %>
			  <% end %>
			 </div>
			</div>
  </div>
 </div>


